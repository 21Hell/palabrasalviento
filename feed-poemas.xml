---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title }} - Poemas</title>
    <link>{{ site.url }}{{ site.baseurl }}/poemas</link>
    <description>{{ site.description }}</description>
    {% assign poemas_ordenados = site.poemas | sort: 'date' | reverse | slice: 0, 50 %}
    {% for poema in poemas_ordenados %}
    <item>
      <title>{{ poema.title }}</title>
      <link>{{ site.url }}{{ site.baseurl }}{{ poema.url }}</link>
      <description>{{ poema.content | xml_escape | strip_html | truncatewords: 40, '...' }}</description>
      <pubDate>{{ poema.date | date_to_rfc822 }}</pubDate>
      <category>{% if poema.categoria %}{{ poema.categoria }}{% elsif poema.categories %}{{ poema.categories | join: ", " }}{% endif %}</category>
    </item>
    {% endfor %}
  </channel>
</rss>
